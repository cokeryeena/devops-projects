pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("myapp:${env.GIT_COMMIT}")
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', docker-hub-creds) {
                        docker.image("myapp:${env.GIT_COMMIT}").push()
                    }
                }
            }
        }

        stage('Deploy on EC2') {
            steps {
                sshagent([ec2-ssh-key]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ec2-user@54.196.122.155"
                        docker pull /myapp:${GIT_COMMIT} &&
                        docker stop myapp || true &&
                        docker rm myapp || true &&
                        docker run -d -p 5000:5000 --name myapp boyyeena/myapp:${GIT_COMMIT}"
                    '''
                }
            }
        }
    }
}
